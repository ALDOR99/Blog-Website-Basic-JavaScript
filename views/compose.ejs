<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input class="form-control" type="text" name="postTitle" />
    <label for="">Post</label>
    <textarea
      class="form-control"
      name="postBody"
      cols="5"
      rows="10"
    ></textarea>
